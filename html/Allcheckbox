        $(document).ready(function() {
            // ë°©ë²• 1: ì²´í¬ë°•ìŠ¤ change ì´ë²¤íŠ¸ë¡œ ì¤‘ë³µ ì„ íƒ ë°©ì§€
            $('input[name="options"]').on('change', function() {
                if ($(this).is(':checked')) {
                    // í˜„ì¬ ì²´í¬ë°•ìŠ¤ë¥¼ ì œì™¸í•œ ëª¨ë“  ì²´í¬ë°•ìŠ¤ í•´ì œ
                    $('input[name="options"]').not(this).prop('checked', false);
                    
                    // ëª¨ë“  í•­ëª©ì—ì„œ selected í´ë˜ìŠ¤ ì œê±°
                    $('.checkbox-item').removeClass('selected');
                    
                    // í˜„ì¬ í•­ëª©ì— selected í´ë˜ìŠ¤ ì¶”ê°€
                    $(this).closest('.checkbox-item').addClass('selected');
                    
                    // ì„ íƒëœ ê°’ í‘œì‹œ
                    $('#selectedOption')
                        .text($(this).val())
                        .removeClass('empty-state');
                } else {
                    // ì²´í¬ë°•ìŠ¤ í•´ì œ ì‹œ
                    $(this).closest('.checkbox-item').removeClass('selected');
                    $('#selectedOption')
                        .text('ì•„ì§ ì„ íƒëœ ì˜µì…˜ì´ ì—†ìŠµë‹ˆë‹¤.')
                        .addClass('empty-state');
                }
            });
            
            // ì²´í¬ë°•ìŠ¤ ì•„ì´í…œ ì „ì²´ í´ë¦­ ì´ë²¤íŠ¸
            $('.checkbox-item').on('click', function(e) {
                if (!$(e.target).is('input, label')) {
                    $(this).find('input[type="checkbox"]').trigger('click');
                }
            });
        });

