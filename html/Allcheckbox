    <script>
        // ëª¨ë“  ì²´í¬ë°•ìŠ¤ ìš”ì†Œë¥¼ ê°€ì ¸ì˜µë‹ˆë‹¤
        const checkboxes = document.querySelectorAll('input[name="options"]');
        const selectedOption = document.getElementById('selectedOption');
        const checkboxItems = document.querySelectorAll('.checkbox-item');
        
        // ê° ì²´í¬ë°•ìŠ¤ì— ì´ë²¤íŠ¸ ë¦¬ìŠ¤ë„ˆë¥¼ ì¶”ê°€í•©ë‹ˆë‹¤
        checkboxes.forEach((checkbox, index) => {
            checkbox.addEventListener('change', function() {
                if (this.checked) {
                    // í˜„ì¬ ì²´í¬ë°•ìŠ¤ë¥¼ ì œì™¸í•œ ëª¨ë“  ì²´í¬ë°•ìŠ¤ì˜ ì„ íƒì„ í•´ì œí•©ë‹ˆë‹¤
                    checkboxes.forEach((otherCheckbox, otherIndex) => {
                        if (otherCheckbox !== this) {
                            otherCheckbox.checked = false;
                            checkboxItems[otherIndex].classList.remove('selected');
                        }
                    });
                    
                    // ì„ íƒëœ í•­ëª©ì— ìŠ¤íƒ€ì¼ ì¶”ê°€
                    checkboxItems[index].classList.add('selected');
                    
                    // ì„ íƒëœ ê°’ì„ í‘œì‹œí•©ë‹ˆë‹¤
                    selectedOption.textContent = this.value;
                    selectedOption.classList.remove('empty-state');
                } else {
                    // ì²´í¬ë°•ìŠ¤ ì„ íƒì´ í•´ì œëœ ê²½ìš°
                    checkboxItems[index].classList.remove('selected');
                    selectedOption.textContent = 'ì•„ì§ ì„ íƒëœ ì˜µì…˜ì´ ì—†ìŠµë‹ˆë‹¤.';
                    selectedOption.classList.add('empty-state');
                }
            });
            
            // ì²´í¬ë°•ìŠ¤ ì•„ì´í…œ ì „ì²´ í´ë¦­ ì´ë²¤íŠ¸
            checkboxItems[index].addEventListener('click', function(e) {
                if (e.target.tagName !== 'INPUT' && e.target.tagName !== 'LABEL') {
                    checkbox.click();
                }
            });
        });
    </script>
