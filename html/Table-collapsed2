    <script src="https://demos.themeselection.com/sneat-bootstrap-html-admin-template-free/assets/vendor/libs/jquery/jquery.js"></script>
    <script src="https://demos.themeselection.com/sneat-bootstrap-html-admin-template-free/assets/vendor/libs/popper/popper.js"></script>
    <script src="https://demos.themeselection.com/sneat-bootstrap-html-admin-template-free/assets/vendor/js/bootstrap.js"></script>

    <!-- Page JS -->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // 1. 메뉴 데이터 구조 정의
            const menuData = [
                { id: 'dashboard', icon: 'bx-home-alt', title: '대시보드' },
                {
                    id: 'stats',
                    icon: 'bx-bar-chart-alt-2',
                    title: '통계 관리',
                    children: [
                        { id: 'daily-stats', title: '일별 통계' },
                        { id: 'monthly-stats', title: '월별 통계' },
                    ]
                },
                {
                    id: 'users',
                    icon: 'bx-group',
                    title: '사용자 관리',
                    children: [
                        { id: 'permissions', title: '권한 관리' },
                        { id: 'roles', title: '역할 관리' },
                    ]
                },
                {
                    id: 'settings',
                    icon: 'bx-cog',
                    title: '설정',
                    children: [
                        { id: 'notifications', title: '알림 설정' },
                        { id: 'security', title: '보안 설정' },
                    ]
                }
            ];

            /**
             * 2. 메뉴 생성 함수
             * @param {Array} items - 메뉴 데이터 배열
             * @returns {string} - 생성된 HTML 문자열
             */
            function createMenuHTML(items) {
                let html = '';
                
                // 권한 체크박스 HTML을 생성하는 헬퍼 함수
                const createCheckboxHTML = () => `
                    <div class="checkbox-wrapper">
                        <div><input class="form-check-input" type="checkbox" /></div>
                        <div><input class="form-check-input" type="checkbox" /></div>
                        <div><input class="form-check-input" type="checkbox" /></div>
                        <div><input class="form-check-input" type="checkbox" /></div>
                    </div>
                `;

                items.forEach(item => {
                    const hasChildren = item.children && item.children.length > 0;
                    const collapseId = `menu-collapse-${item.id}`;

                    // 부모 메뉴 아이템 HTML
                    html += `
                        <li class="list-group-item ${hasChildren ? 'collapsible-menu' : ''}" 
                            ${hasChildren ? `data-bs-toggle="collapse" data-bs-target="#${collapseId}" aria-expanded="false"` : ''}>
                            <div class="menu-title-wrapper">
                                ${hasChildren ? "<i class='bx bx-chevron-down toggle-icon'></i>" : ''}
                                <i class='bx ${item.icon} menu-icon'></i>
                                ${hasChildren ? `<strong>${item.title}</strong>` : item.title}
                            </div>
                            ${createCheckboxHTML()}
                        </li>
                    `;

                    // 자식 메뉴 아이템 HTML (재귀 호출 대신 반복문으로 처리)
                    if (hasChildren) {
                        html += `<ul id="${collapseId}" class="list-group list-group-flush collapse">`;
                        item.children.forEach(child => {
                            html += `
                                <li class="list-group-item child-menu-item">
                                    <div class="menu-title-wrapper">${child.title}</div>
                                    ${createCheckboxHTML()}
                                </li>
                            `;
                        });
                        html += `</ul>`;
                    }
                });
                return html;
            }

            // 3. 메뉴 렌더링
            const menuContainer = document.getElementById('menu-permission-list');
            if (menuContainer) {
                menuContainer.innerHTML = createMenuHTML(menuData);
            }
        });
    </script>
</body>
